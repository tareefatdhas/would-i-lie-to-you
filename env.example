# Server Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
CORS_ORIGIN=https://wouldilietoyou.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# Game Configuration
MAX_PLAYERS_PER_ROOM=20
ROOM_CODE_LENGTH=6
SESSION_TIMEOUT=3600000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/would_i_lie_to_you
DB_HOST=localhost
DB_PORT=5432
DB_NAME=would_i_lie_to_you
DB_USER=username
DB_PASSWORD=password
DB_SSL=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io Configuration
SOCKET_IO_ORIGINS=https://wouldilietoyou.app
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Monitoring Configuration (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# Email Configuration (Optional - for future features)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@wouldilietoyou.app

# AWS Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Analytics (Optional)
GA_TRACKING_ID=

# Feature Flags
ENABLE_USER_ACCOUNTS=false
ENABLE_GAME_HISTORY=false
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# Development Configuration
DEV_AUTO_RESTART=true
DEV_MOCK_DELAY=0 